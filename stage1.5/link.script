ENTRY(main);
SECTIONS
{
	. = 0x0000;

	.sig : AT(0x0000)
	{
		/* STRING("ShovStage1.5"); */
		/* TODO: add other options here */
	}

	.text : AT(0x0100)
	{
		_text_start = .;
		*(.text);
		_text_end = .;
	}

	.data : AT( 0x0100 + (SIZEOF(.text) )
	{
		_data_start = .;
		*(.bss);
		*(.bss*);
		*(.data);
		*(.rodata);
		*(.COMMON);
		_data_end = .;
	}

      .heap : AT( 0x0100 + (SIZEOF(.text) + SIZEOF(.data) )
      {
		_heap_start = .;
      }

	/DISCARD/ :
	{
		*(.note*);
		*(.iplt*);
		*(.igot*);
		*(.rel*);
		*(.comment);
	}
}


